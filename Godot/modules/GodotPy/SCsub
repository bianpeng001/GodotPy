import os
import os.path
import shutil

Import('env')
Import("env_modules")

print('init GodotPy...')

# 兼容一下路径
PYTHON_HOME = 'D:/OpenSource/cpython'
if not os.path.exists(PYTHON_HOME):
    PYTHON_HOME = 'H:/cpython'

# 准备工作, 复制python3.lib，因为后缀跟平台环境有关，但是我懒得弄了，复制改名算了
def GetReady():
    Python3SrcPath = PYTHON_HOME + '/python3.lib'
    Python3DstPath = PYTHON_HOME + '/python3' + env["LIBSUFFIX"]
    if os.path.exists(Python3SrcPath):
        if not os.path.exists(Python3DstPath) or\
            os.path.getmtime(Python3SrcPath) > os.path.getmtime(Python3DstPath):
            print('copy', Python3DstPath)
            shutil.copyfile(Python3SrcPath, Python3DstPath)

GetReady()

incs = [
    PYTHON_HOME + '/Include',
    PYTHON_HOME + '/Include/internal',
    PYTHON_HOME + '/Godot',
]

env.Append(LIBPATH = [
    PYTHON_HOME,
])
env.Append(LIBS = [
    'python3',
])
env.Append(CPPPATH = incs)

godotpy_module = env_modules.Clone()
godotpy_module.Append(CPPPATH = incs)
godotpy_module.add_source_files(env.modules_sources, "src/*.cpp")


