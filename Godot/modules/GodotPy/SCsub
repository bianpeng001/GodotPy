import os
import os.path
import shutil

Import('env')
Import("env_modules")

print('init GodotPy...')

# 兼容一下路径
PYTHON_HOME = 'D:/OpenSource/cpython'
if not os.path.exists(PYTHON_HOME):
    PYTHON_HOME = 'H:/cpython'

# 准备工作, 复制python3.lib，因为后缀跟平台环境有关，但是我懒得弄了，复制改名算了
def GetReady():
    Python3Lib = PYTHON_HOME + '/python3.lib'
    Python3LibDst = PYTHON_HOME + '/python3' + env["LIBSUFFIX"]
    if os.path.exists(Python3Lib):
        if not os.path.exists(Python3LibDst) or\
                os.path.getmtime(Python3LibDst) < os.path.getmtime(Python3Lib):
            print('copy', Python3LibDst)
            shutil.copyfile(Python3Lib, Python3LibDst)

    Python3Dll = PYTHON_HOME + '/python3.dll'
    Python3DllDst = '../../bin/python3.dll'
    if os.path.exists(Python3Dll):
        if not os.path.exists(Python3DllDst) or\
                os.path.getmtime(Python3DllDst) < os.path.getmtime(Python3Dll):
            print('copy', Python3DllDst)
            shutil.copyfile(Python3Dll, Python3DllDst)

GetReady()

incs = [
    PYTHON_HOME + '/Include',
    PYTHON_HOME + '/Include/internal',
    PYTHON_HOME + '/Godot',
]

env.Append(LIBPATH = [
    PYTHON_HOME,
])
env.Append(LIBS = [
    'python3',
])
env.Append(CPPPATH = incs)

godotpy_module = env_modules.Clone()
godotpy_module.Append(CPPPATH = incs)
godotpy_module.add_source_files(env.modules_sources, "src/*.cpp")


